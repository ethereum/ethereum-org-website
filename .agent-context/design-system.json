{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "design-system.json",
    "version": "1.0.0",
    "description": "Design system documentation for ethereum.org. Documents CSS custom properties, semantic tokens, and UI component patterns for AI agent consumption.",
    "maintenance": {
        "description": "Guidelines for maintaining and extending this design system schema.",
        "updateTriggers": [
            "When adding new CSS custom properties to src/styles/",
            "When modifying Chakra UI theme tokens in src/theme/",
            "When creating new UI component patterns",
            "When updating Tailwind configuration"
        ],
        "updateProcedure": [
            "1. Identify the appropriate section (colorTokens, semanticTokens, typography, etc.)",
            "2. Add new tokens with description field",
            "3. Update sourceMapping if new source files are involved",
            "4. Run 'pnpm run validate-design-system' to validate changes",
            "5. Increment the patch version number"
        ],
        "versioningPolicy": "Semantic versioning: MAJOR for breaking changes, MINOR for additions, PATCH for fixes"
    },
    "sourceMapping": {
        "description": "Maps token groups to their source files for traceability.",
        "mappings": {
            "colorTokens": {
                "primarySource": "src/styles/colors.css",
                "description": "HSL color palettes defined as CSS custom properties"
            },
            "semanticTokens": {
                "primarySource": "src/styles/semantic-tokens.css",
                "description": "Theme-aware tokens that switch between light/dark modes"
            },
            "typography": {
                "primarySources": [
                    "src/styles/global.css",
                    "tailwind.config.ts"
                ],
                "description": "Font families, sizes, and heading scale definitions"
            },
            "spacing": {
                "primarySource": "tailwind.config.ts",
                "description": "Custom spacing values extending Tailwind defaults"
            },
            "shadows": {
                "primarySource": "src/styles/semantic-tokens.css",
                "description": "Box shadow tokens for elevation"
            },
            "zIndex": {
                "primarySource": "tailwind.config.ts",
                "description": "Z-index scale for UI layering"
            },
            "theming": {
                "primarySource": "src/components/ThemeProvider.tsx",
                "description": "Color mode theming configuration using next-themes"
            },
            "componentPatterns": {
                "sources": {
                    "button": "src/components/ui/buttons/Button.tsx",
                    "card": "src/components/Card/index.tsx",
                    "description": "Component source file paths for common UI patterns."
                },
                "description": "Common component patterns with styling approaches"
            },
            "description": "Mapping entries associating token groups with their primary source files."
        }
    },
